{
  "compilerOptions": {
    "module": "ES2015",
    "target": "ES5",
    "noImplicitAny": true,
    "sourceMap": false,
    "downlevelIteration": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictNullChecks": true,
    "declaration": true,
    "moduleResolution": "Node",
    "baseUrl": "./src",
    "lib": [
      "dom",
      "es2016",
      "es2017.object"
    ],
    "outDir": "dist",
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}